/* app.wxss - 全局样式 */

/* ─── 基础变量 ─── */
page {
  --primary: #5B7FE8;
  --primary-light: #E8EEFF;
  --patient-bg: #FFF9F5;
  --patient-accent: #D4956A;
  --patient-text: #5A3A28;
  --caregiver-bg: #F4F7FE;
  --caregiver-accent: #5B7FE8;
  --caregiver-text: #1A2A3A;
  --text: #333;
  --text-light: #999;
  --border: #EAEAEA;
  --danger: #E05050;
  --success: #4CAF50;
  --card-radius: 20rpx;

  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  color: var(--text);
  background-color: #F6F7FB;
  box-sizing: border-box;
}

/* ─── 通用卡片 ─── */
.card {
  background: #fff;
  border-radius: var(--card-radius);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* ─── 按钮 ─── */
.btn-primary {
  background: var(--primary);
  color: #fff;
  border: none;
  border-radius: 28rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  width: 100%;
  text-align: center;
}

.btn-primary::after {
  border: none;
}

.btn-outline {
  background: #fff;
  color: var(--text-light);
  border: 2rpx solid var(--border);
  border-radius: 28rpx;
  padding: 24rpx 0;
  font-size: 30rpx;
  font-weight: 500;
  width: 100%;
  text-align: center;
}

.btn-outline::after {
  border: none;
}

/* ─── 评分选项 ─── */
.score-row {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.score-item {
  flex: 1;
  min-width: 120rpx;
  padding: 20rpx 8rpx;
  border-radius: 16rpx;
  border: 2rpx solid var(--border);
  text-align: center;
  font-size: 24rpx;
  color: var(--text-light);
  background: #fff;
  transition: all 0.2s;
}

.score-item.active {
  border-color: var(--primary);
  background: var(--primary-light);
  color: var(--primary);
  font-weight: 600;
}

/* ─── 区块标题 ─── */
.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
  margin-bottom: 20rpx;
}

.section-label {
  font-size: 26rpx;
  color: var(--text-light);
  margin-bottom: 12rpx;
}

/* ─── 分隔线 ─── */
.divider {
  height: 1rpx;
  background: var(--border);
  margin: 28rpx 0;
}

/* ─── 加载 ─── */
.loading-center {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
  color: var(--text-light);
  font-size: 28rpx;
}

/* ─── 浮动按钮 ─── */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: var(--primary);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(91, 127, 232, 0.4);
  z-index: 100;
  font-size: 48rpx;
}
