/* pages/home/home.wxss - 优化版 */
.home-page { padding: 32rpx 32rpx 220rpx; min-height: 100vh; }
.patient-theme { background: linear-gradient(180deg, #FFF7ED 0%, #FFF1E6 30%, #F9F4EF 100%); }
.caregiver-theme { background: linear-gradient(180deg, #EFF6FF 0%, #E8F0FE 30%, #F0F4FA 100%); }

/* 问候 */
.greeting { margin-bottom: 28rpx; padding-top: 12rpx; }
.greeting-text { display: block; font-size: 42rpx; font-weight: 800; letter-spacing: 1rpx; }
.patient-theme .greeting-text { color: #92400E; }
.caregiver-theme .greeting-text { color: #1E40AF; }
.greeting-sub { display: block; font-size: 26rpx; color: #94A3B8; margin-top: 10rpx; font-weight: 500; }

/* 疗程提示 */
.cycle-hint { padding: 20rpx 28rpx; border-radius: 16rpx; margin-bottom: 28rpx; font-size: 24rpx; font-weight: 500; }
.patient-theme .cycle-hint { background: linear-gradient(135deg, #FEF3C7, #FEFCE8); color: #92400E; border: 1rpx solid #FDE68A; }
.caregiver-theme .cycle-hint { background: linear-gradient(135deg, #EEF2FF, #E0E7FF); color: #4338CA; border: 1rpx solid #C7D2FE; }

/* 状态卡片 */
.status-card { text-align: center; padding: 48rpx 32rpx; border-radius: 28rpx; position: relative; overflow: hidden; }
.status-card::before { content: ''; position: absolute; top: 0; left: 0; right: 0; height: 6rpx; background: linear-gradient(90deg, var(--primary), #818CF8, #A78BFA); }
.status-emoji { font-size: 88rpx; display: block; margin-bottom: 20rpx; }
.status-text { display: block; font-size: 28rpx; color: #64748B; margin-bottom: 28rpx; font-weight: 500; line-height: 1.5; }
.action-btns { display: flex; flex-direction: column; gap: 16rpx; margin-top: 8rpx; }

/* 只记体温按钮 */
.btn-quick {
  background: linear-gradient(135deg, #F0F4FF, #EEF2FF);
  color: #6366F1;
  border: 2rpx solid #C7D2FE;
  border-radius: 28rpx;
  padding: 0;
  height: 84rpx;
  line-height: 84rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-quick:active { background: #E0E7FF; }
.btn-quick::after { border: none; }

/* ─── 患者已记录：鼓励区域 ─── */
.encourage-section {
  padding: 12rpx 0;
}

.encourage-text {
  display: block;
  font-size: 30rpx;
  color: #92400E;
  font-weight: 600;
  line-height: 1.6;
  margin-bottom: 28rpx;
}

.recorded-actions {
  margin-top: 8rpx;
}

/* ─── 家属已记录：数值展示 ─── */
.recorded-info { margin-top: 12rpx; }
.info-grid { display: flex; justify-content: center; gap: 48rpx; margin-bottom: 28rpx; padding: 20rpx 0; }
.info-item { text-align: center; }
.info-icon { display: block; font-size: 44rpx; margin-bottom: 8rpx; }
.info-value { display: block; font-size: 30rpx; font-weight: 700; color: #1E293B; }
.info-label { display: block; font-size: 22rpx; color: #94A3B8; margin-top: 4rpx; font-weight: 500; }
.modify-btn { font-size: 26rpx !important; color: var(--primary) !important; border-color: var(--primary) !important; background: var(--primary-light) !important; }

/* 浮动按钮 & 快捷入口 */
.quick-actions { display: flex; gap: 20rpx; margin-bottom: 24rpx; }
.quick-item { flex: 1; background: #fff; border-radius: 24rpx; padding: 32rpx 0; text-align: center; box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04); border: 1rpx solid rgba(0, 0, 0, 0.02); }
.quick-item:active { transform: scale(0.96); }
.quick-icon { display: block; font-size: 52rpx; margin-bottom: 10rpx; }
.quick-label { font-size: 24rpx; color: #64748B; font-weight: 600; }

/* ─── 快速体温弹窗 ─── */
.overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.45);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quick-modal {
  width: 600rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 52rpx 40rpx 40rpx;
  text-align: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
}

.quick-modal-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 12rpx;
}

.quick-modal-desc {
  display: block;
  font-size: 24rpx;
  color: #94A3B8;
  margin-bottom: 36rpx;
}

.quick-temp-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 36rpx;
}

.quick-temp-input {
  width: 240rpx;
  height: 100rpx;
  text-align: center;
  font-size: 52rpx;
  font-weight: 800;
  color: #1E293B;
  border: 3rpx solid #E2E8F0;
  border-radius: 20rpx;
  background: #FAFBFC;
}

.quick-temp-input:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.15);
}

.quick-temp-unit {
  font-size: 36rpx;
  color: #94A3B8;
  font-weight: 600;
}

.quick-save-btn {
  margin-bottom: 8rpx;
}

.quick-cancel {
  padding: 20rpx;
  font-size: 28rpx;
  color: #94A3B8;
}
