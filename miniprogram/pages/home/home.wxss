/* pages/home/home.wxss */
.home-page { padding: 32rpx 32rpx 200rpx; min-height: 100vh; }
.patient-theme { background: var(--patient-bg); }
.caregiver-theme { background: var(--caregiver-bg); }

/* 问候 */
.greeting { margin-bottom: 24rpx; }
.greeting-text { display: block; font-size: 38rpx; font-weight: 700; }
.patient-theme .greeting-text { color: var(--patient-text); }
.caregiver-theme .greeting-text { color: var(--caregiver-text); }
.greeting-sub { display: block; font-size: 26rpx; color: #8090A0; margin-top: 8rpx; }

/* 疗程提示 */
.cycle-hint {
  padding: 16rpx 24rpx; border-radius: 12rpx; margin-bottom: 24rpx;
  font-size: 24rpx;
}
.patient-theme .cycle-hint { background: #FFF0E6; color: #C4956A; }
.caregiver-theme .cycle-hint { background: #E8EEFF; color: #5B7FE8; }

/* 状态卡片 */
.status-card { text-align: center; padding: 40rpx 32rpx; }
.status-emoji { font-size: 80rpx; display: block; margin-bottom: 16rpx; }
.status-text { display: block; font-size: 28rpx; color: #666; margin-bottom: 28rpx; }

.action-btns { display: flex; flex-direction: column; gap: 16rpx; margin-top: 8rpx; }
.btn-tough {
  background: #FFF5F0; color: #D4956A; border: 2rpx solid #FFE0C0;
  border-radius: 28rpx; padding: 22rpx 0; font-size: 28rpx; font-weight: 500;
}
.btn-tough::after { border: none; }

/* 已记录 */
.recorded-info { margin-top: 8rpx; }
.info-grid { display: flex; justify-content: center; gap: 40rpx; margin-bottom: 24rpx; }
.info-item { text-align: center; }
.info-icon { display: block; font-size: 40rpx; margin-bottom: 4rpx; }
.info-value { display: block; font-size: 28rpx; font-weight: 600; color: #333; }
.info-label { display: block; font-size: 22rpx; color: #999; margin-top: 2rpx; }
.modify-btn { font-size: 26rpx !important; padding: 16rpx 0 !important; }

/* 浮动按钮 */
.fab {
  position: fixed; right: 40rpx; bottom: 200rpx;
  width: 112rpx; height: 112rpx; border-radius: 56rpx;
  background: var(--primary); display: flex; align-items: center; justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(91,127,232,0.4); z-index: 100;
}
.fab text { font-size: 48rpx; }

/* 快捷入口 */
.quick-actions { display: flex; gap: 20rpx; margin-bottom: 24rpx; }
.quick-item {
  flex: 1; background: #fff; border-radius: 20rpx; padding: 28rpx 0;
  text-align: center; box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.quick-icon { display: block; font-size: 48rpx; margin-bottom: 8rpx; }
.quick-label { font-size: 24rpx; color: #666; }

/* 留言 */
.message-card { margin-top: 8rpx; }
.message-item { padding: 16rpx 0; border-bottom: 1rpx solid #F0F0F0; }
.message-item:last-child { border: none; }
.message-content { display: block; font-size: 28rpx; color: #333; line-height: 1.6; }
.message-from { display: block; font-size: 22rpx; color: #999; margin-top: 8rpx; text-align: right; }
