/* pages/login/login.wxss */
.login-page {
  min-height: 100vh;
  padding: 120rpx 48rpx 60rpx;
  background: linear-gradient(180deg, #EEF2FF 0%, #F6F7FB 40%);
}

.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-emoji {
  font-size: 96rpx;
  display: block;
  margin-bottom: 16rpx;
}

.logo-title {
  display: block;
  font-size: 52rpx;
  font-weight: 800;
  color: #2A3A5A;
  margin-bottom: 8rpx;
}

.logo-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8090A0;
}

.form-section {
  background: #fff;
  border-radius: 28rpx;
  padding: 48rpx 36rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #EAEAEA;
  border-radius: 16rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: var(--primary);
}

.login-btn {
  margin-top: 16rpx;
}

.register-hint {
  text-align: center;
  margin-top: 28rpx;
  padding: 12rpx;
}

.hint-text {
  font-size: 24rpx;
  color: var(--primary);
}
