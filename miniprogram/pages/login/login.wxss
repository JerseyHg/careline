/* pages/login/login.wxss - 修复版 */
.login-page {
  min-height: 100vh;
  padding: 0 48rpx 60rpx;
  background: linear-gradient(165deg, #EEF2FF 0%, #E0E7FF 25%, #F0F4FF 50%, #F8FAFC 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.logo-section { text-align: center; margin-bottom: 72rpx; padding-top: 80rpx; }
.logo-emoji { font-size: 88rpx; display: block; margin-bottom: 20rpx; }
.logo-title { display: block; font-size: 56rpx; font-weight: 800; color: #1E293B; margin-bottom: 12rpx; letter-spacing: 2rpx; }
.logo-subtitle { display: block; font-size: 28rpx; color: #94A3B8; letter-spacing: 4rpx; }

.form-section {
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 52rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(99, 102, 241, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.input-group { margin-bottom: 32rpx; }
.input-label { display: block; font-size: 26rpx; color: #64748B; margin-bottom: 12rpx; font-weight: 600; }

/* 隐私协议 */
.privacy-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 0;
  margin-bottom: 12rpx;
}

.privacy-check {
  width: 36rpx;
  height: 36rpx;
  border-radius: 8rpx;
  border: 2rpx solid #CBD5E1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #fff;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.privacy-check.checked {
  background: var(--primary);
  border-color: var(--primary);
}

.privacy-text {
  font-size: 24rpx;
  color: #94A3B8;
  line-height: 1.5;
}

.privacy-link {
  color: var(--primary);
  font-weight: 500;
}

/* 登录按钮 */
.login-btn {
  margin-top: 8rpx;
}

.login-btn[disabled] {
  opacity: 0.5;
}

.register-hint { text-align: center; margin-top: 32rpx; padding: 16rpx; }
.hint-text { font-size: 24rpx; color: var(--primary); font-weight: 500; }
