/* pages/onboard/onboard.wxss */
.onboard-page { padding: 80rpx 40rpx; }

.logo-section { text-align: center; margin-bottom: 60rpx; }
.logo-emoji { font-size: 80rpx; display: block; margin-bottom: 12rpx; }
.title { display: block; font-size: 40rpx; font-weight: 700; color: #2A3A5A; }
.subtitle { display: block; font-size: 26rpx; color: #8090A0; margin-top: 8rpx; }

.card {
  display: flex; align-items: center; background: #fff;
  border-radius: 24rpx; padding: 36rpx 32rpx; margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
}
.card-icon { font-size: 48rpx; margin-right: 24rpx; }
.card-text { flex: 1; }
.card-title { display: block; font-size: 30rpx; font-weight: 600; color: #333; }
.card-desc { display: block; font-size: 24rpx; color: #999; margin-top: 4rpx; }
.card-arrow { font-size: 36rpx; color: #CCC; }

.form-card {
  background: #fff; border-radius: 28rpx; padding: 48rpx 36rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}
.form-title { display: block; font-size: 36rpx; font-weight: 700; color: #2A3A5A; margin-bottom: 36rpx; text-align: center; }

.input-group { margin-bottom: 28rpx; }
.input-label { display: block; font-size: 26rpx; color: #666; margin-bottom: 12rpx; font-weight: 500; }
.input-field {
  width: 100%; height: 88rpx; padding: 0 24rpx;
  border: 2rpx solid #EAEAEA; border-radius: 16rpx; font-size: 30rpx; box-sizing: border-box;
}

.role-row { display: flex; gap: 24rpx; }
.role-item {
  flex: 1; text-align: center; padding: 28rpx 0; border-radius: 16rpx;
  border: 2rpx solid #EAEAEA; background: #fff;
}
.role-item.active { border-color: var(--primary); background: var(--primary-light); }
.role-emoji { display: block; font-size: 48rpx; margin-bottom: 8rpx; }
.role-name { font-size: 26rpx; color: #666; }
.role-item.active .role-name { color: var(--primary); font-weight: 600; }

.back-link { text-align: center; margin-top: 24rpx; color: var(--primary); font-size: 28rpx; padding: 16rpx; }
