/* pages/onboard/onboard.wxss - 美化版 */
.onboard-page {
  padding: 100rpx 40rpx;
  min-height: 100vh;
  background: linear-gradient(165deg, #EEF2FF 0%, #E0E7FF 25%, #F0F4FF 50%, #F8FAFC 100%);
}

.logo-section {
  text-align: center;
  margin-bottom: 64rpx;
}

.logo-emoji {
  font-size: 80rpx;
  display: block;
  margin-bottom: 16rpx;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1E293B;
  letter-spacing: 2rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #94A3B8;
  margin-top: 12rpx;
}

.card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 40rpx 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(99, 102, 241, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  transition: all 0.2s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.04);
}

.card-icon {
  font-size: 52rpx;
  margin-right: 28rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #EEF2FF;
  border-radius: 20rpx;
}

.card-text { flex: 1; }

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #1E293B;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #94A3B8;
  margin-top: 6rpx;
}

.card-arrow {
  font-size: 40rpx;
  color: #C7D2FE;
  font-weight: 300;
}

.form-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 52rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(99, 102, 241, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.form-title {
  display: block;
  font-size: 38rpx;
  font-weight: 800;
  color: #1E293B;
  margin-bottom: 40rpx;
  text-align: center;
}

.input-group {
  margin-bottom: 28rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #64748B;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.role-row {
  display: flex;
  gap: 24rpx;
}

.role-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  border-radius: 20rpx;
  border: 2rpx solid #E2E8F0;
  background: #FAFBFC;
  transition: all 0.25s ease;
}

.role-item.active {
  border-color: var(--primary);
  background: var(--primary-light);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.15);
  transform: translateY(-4rpx);
}

.role-emoji {
  display: block;
  font-size: 52rpx;
  margin-bottom: 10rpx;
}

.role-name {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
}

.role-item.active .role-name {
  color: var(--primary);
  font-weight: 700;
}

.back-link {
  text-align: center;
  margin-top: 28rpx;
  color: var(--primary);
  font-size: 28rpx;
  padding: 16rpx;
  font-weight: 500;
}
