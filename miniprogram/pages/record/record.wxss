/* pages/record/record.wxss */
.record-page { padding: 24rpx 24rpx 160rpx; min-height: 100vh; background: #F6F7FB; }

/* 代填Banner */
.proxy-banner {
  background: #E8EEFF; color: #5B7FE8; padding: 16rpx 24rpx;
  border-radius: 12rpx; font-size: 24rpx; text-align: center; margin-bottom: 20rpx;
}

/* 确认页 */
.confirm-section { padding: 60rpx 24rpx; }
.confirm-card { text-align: center; padding: 48rpx 32rpx; }
.confirm-card.has-record { border: 2rpx solid #FFE0C0; background: #FFFAF5; }
.confirm-card.no-record { border: 2rpx solid #D8E0F0; background: #F8FAFF; }
.confirm-emoji { font-size: 80rpx; display: block; margin-bottom: 16rpx; }
.confirm-title { display: block; font-size: 34rpx; font-weight: 700; color: #333; margin-bottom: 8rpx; }
.confirm-desc { display: block; font-size: 26rpx; color: #999; margin-bottom: 24rpx; }
.confirm-hint { display: block; font-size: 22rpx; color: #C4A080; margin-top: 20rpx; }

.existing-data {
  margin: 20rpx 0; padding: 24rpx; background: #fff;
  border-radius: 16rpx; border: 1rpx solid #F0E8E0; text-align: left;
}
.data-header { display: block; font-size: 22rpx; color: #BBB; margin-bottom: 12rpx; }
.data-grid { display: flex; flex-wrap: wrap; gap: 12rpx; }
.data-item { font-size: 26rpx; color: #666; display: inline-block; margin-right: 24rpx; }
.data-item.danger { color: #E05050; }

/* 成功页 */
.success-section { padding: 120rpx 48rpx; text-align: center; }
.success-emoji { font-size: 100rpx; display: block; margin-bottom: 20rpx; }
.success-title { display: block; font-size: 36rpx; font-weight: 700; color: #333; }
.success-desc { display: block; font-size: 26rpx; color: #999; margin-top: 12rpx; }

/* 评分区域覆写 */
.score-row { display: flex; flex-wrap: wrap; gap: 12rpx; }
.score-item {
  flex: 1; min-width: 140rpx; padding: 20rpx 8rpx;
  border-radius: 16rpx; border: 2rpx solid #EAEAEA;
  text-align: center; font-size: 24rpx; color: #999; background: #fff;
}
.score-item.active {
  border-color: var(--primary); background: var(--primary-light);
  color: var(--primary); font-weight: 600;
}

/* Stepper */
.stepper { display: flex; align-items: center; justify-content: center; gap: 40rpx; }
.stepper-btn {
  width: 72rpx; height: 72rpx; border-radius: 36rpx;
  background: var(--primary-light); color: var(--primary);
  display: flex; align-items: center; justify-content: center;
  font-size: 40rpx; font-weight: 700;
}
.stepper-value { font-size: 48rpx; font-weight: 700; color: #333; min-width: 60rpx; text-align: center; }

/* Toggle */
.toggle-row {
  display: flex; align-items: center; justify-content: space-between;
  padding: 20rpx 0; border-bottom: 1rpx solid #F5F5F5;
}
.toggle-row:last-child { border: none; }
.toggle-label { font-size: 28rpx; color: #333; }
.toggle-switch {
  width: 88rpx; height: 48rpx; border-radius: 24rpx;
  background: #E0E0E0; position: relative; transition: background 0.3s;
}
.toggle-switch.on { background: var(--primary); }
.toggle-dot {
  width: 40rpx; height: 40rpx; border-radius: 20rpx;
  background: #fff; position: absolute; top: 4rpx; left: 4rpx;
  transition: transform 0.3s; box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}
.toggle-switch.on .toggle-dot { transform: translateX(40rpx); }

/* 体温输入 */
.temp-input-row { display: flex; align-items: center; gap: 16rpx; padding: 12rpx 0 20rpx; }
.temp-label { font-size: 26rpx; color: #666; }
.temp-input {
  width: 200rpx; height: 72rpx; border: 2rpx solid #EAEAEA;
  border-radius: 12rpx; padding: 0 20rpx; font-size: 30rpx; text-align: center;
}

/* 备注 */
.note-textarea {
  width: 100%; min-height: 120rpx; padding: 20rpx;
  border: 2rpx solid #EAEAEA; border-radius: 12rpx; font-size: 28rpx;
  box-sizing: border-box;
}

/* 保存 */
.save-area { padding: 24rpx 0; }
.save-btn { font-size: 32rpx !important; }
