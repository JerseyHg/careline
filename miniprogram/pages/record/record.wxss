/* pages/record/record.wxss - 美化版 */
.record-page {
  padding: 24rpx 24rpx 180rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #F8FAFC 0%, #F1F5F9 100%);
}

/* 代填Banner */
.proxy-banner {
  background: linear-gradient(135deg, #EEF2FF, #E0E7FF);
  color: #4338CA;
  padding: 20rpx 28rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 24rpx;
  font-weight: 600;
  border: 1rpx solid #C7D2FE;
}

/* 确认页 */
.confirm-section { padding: 60rpx 24rpx; }

.confirm-card {
  text-align: center;
  padding: 52rpx 36rpx;
  border-radius: 28rpx;
}

.confirm-card.has-record {
  border: 2rpx solid #FDBA74;
  background: linear-gradient(180deg, #FFFBF5, #FFF7ED);
}

.confirm-card.no-record {
  border: 2rpx solid #C7D2FE;
  background: linear-gradient(180deg, #FAFBFF, #EEF2FF);
}

.confirm-emoji {
  font-size: 88rpx;
  display: block;
  margin-bottom: 20rpx;
}

.confirm-title {
  display: block;
  font-size: 34rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 12rpx;
}

.confirm-desc {
  display: block;
  font-size: 26rpx;
  color: #94A3B8;
  margin-bottom: 28rpx;
}

.confirm-hint {
  display: block;
  font-size: 22rpx;
  color: #D97706;
  margin-top: 24rpx;
  font-weight: 500;
}

.existing-data {
  margin: 24rpx 0;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  border: 1rpx solid #F1F5F9;
  text-align: left;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.03);
}

.data-header {
  display: block;
  font-size: 22rpx;
  color: #94A3B8;
  margin-bottom: 16rpx;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.data-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.data-item {
  font-size: 26rpx;
  color: #475569;
  display: inline-flex;
  align-items: center;
  background: #F8FAFC;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
}

.data-item.danger {
  color: #DC2626;
  background: #FEF2F2;
}

/* 成功页 */
.success-section {
  padding: 140rpx 48rpx;
  text-align: center;
}

.success-emoji {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
  animation: bounce 0.6s ease;
}

@keyframes bounce {
  0% { transform: scale(0.3); opacity: 0; }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); opacity: 1; }
}

.success-title {
  display: block;
  font-size: 38rpx;
  font-weight: 800;
  color: #1E293B;
}

.success-desc {
  display: block;
  font-size: 28rpx;
  color: #94A3B8;
  margin-top: 16rpx;
}

/* 评分区域覆写 */
.score-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.score-item {
  flex: 1;
  min-width: 130rpx;
  padding: 22rpx 10rpx;
  border-radius: 20rpx;
  border: 2rpx solid #E2E8F0;
  text-align: center;
  font-size: 23rpx;
  color: #94A3B8;
  background: #FAFBFC;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.score-item.active {
  border-color: var(--primary);
  background: var(--primary-light);
  color: var(--primary);
  font-weight: 600;
  box-shadow: 0 2rpx 10rpx rgba(99, 102, 241, 0.15);
  transform: translateY(-2rpx);
}
