/* pages/settings/settings.wxss - 修复版 */
.settings-page { padding: 24rpx 24rpx 140rpx; background: linear-gradient(180deg, #F8FAFC, #F1F5F9); min-height: 100vh; }

.user-card { display: flex; align-items: center; padding: 40rpx 36rpx; background: linear-gradient(135deg, #6366F1 0%, #818CF8 50%, #A78BFA 100%); border-radius: 28rpx; box-shadow: 0 8rpx 32rpx rgba(99, 102, 241, 0.25); }
.user-avatar { width: 88rpx; height: 88rpx; display: flex; align-items: center; justify-content: center; background: rgba(255, 255, 255, 0.2); border-radius: 28rpx; margin-right: 24rpx; }
.user-emoji { font-size: 48rpx; }
.user-info { flex: 1; }
.user-name { display: block; font-size: 36rpx; font-weight: 700; color: #fff; }
.user-role { display: block; font-size: 24rpx; color: rgba(255, 255, 255, 0.8); margin-top: 6rpx; font-weight: 500; }

.cycle-info { padding: 12rpx 0; }
.cycle-text { display: block; font-size: 30rpx; font-weight: 700; color: #1E293B; }
.cycle-start { display: block; font-size: 24rpx; color: #94A3B8; margin-top: 6rpx; }
.empty-hint { color: #94A3B8; font-size: 26rpx; padding: 16rpx 0; }

/* 疗程操作按钮 */
.cycle-actions { display: flex; gap: 16rpx; margin-top: 20rpx; }
.cycle-action-btn {
  flex: 1; text-align: center; padding: 20rpx 0;
  border-radius: 16rpx; border: 2rpx solid #E2E8F0;
  background: #FAFBFC; font-size: 26rpx; color: #64748B; font-weight: 500;
  transition: all 0.2s ease;
}
.cycle-action-btn:active { background: #EEF2FF; border-color: #6366F1; color: #6366F1; }

.edit-form { padding-top: 20rpx; }
.input-group { margin-bottom: 24rpx; }
.input-label { display: block; font-size: 26rpx; color: #64748B; margin-bottom: 10rpx; font-weight: 600; }
.picker-field { color: #1E293B; display: flex; align-items: center; }

/* 历史疗程 */
.history-header { display: flex; justify-content: space-between; align-items: center; }
.history-arrow { font-size: 36rpx; color: #CBD5E1; transition: transform 0.3s ease; font-weight: 300; }
.history-arrow.open { transform: rotate(90deg); }
.history-list { margin-top: 20rpx; }
.history-item { display: flex; align-items: center; justify-content: space-between; padding: 24rpx 20rpx; margin-bottom: 12rpx; border-radius: 16rpx; background: #FAFBFC; border: 1rpx solid #F1F5F9; }
.history-item.active { background: linear-gradient(135deg, #EEF2FF, #E0E7FF); border-color: #C7D2FE; }
.history-info { flex: 1; }
.history-top { display: flex; align-items: center; gap: 12rpx; }
.history-name { font-size: 28rpx; font-weight: 700; color: #1E293B; }
.history-badge { font-size: 20rpx; color: #6366F1; background: #EEF2FF; padding: 4rpx 12rpx; border-radius: 8rpx; font-weight: 600; border: 1rpx solid #C7D2FE; }
.history-date { display: block; font-size: 22rpx; color: #94A3B8; margin-top: 6rpx; }
.history-day { display: block; font-size: 22rpx; color: #6366F1; margin-top: 4rpx; font-weight: 600; }
.history-action { padding: 12rpx 24rpx; border-radius: 12rpx; background: #fff; border: 2rpx solid #E2E8F0; }
.history-action:active { background: #EEF2FF; border-color: #6366F1; }
.history-action-text { font-size: 24rpx; color: #6366F1; font-weight: 600; }

.info-row { display: flex; justify-content: space-between; align-items: center; padding: 20rpx 0; border-bottom: 1rpx solid #F1F5F9; }
.info-row:last-child { border: none; }
.info-label { font-size: 28rpx; color: #64748B; }
.info-value { font-size: 28rpx; color: #1E293B; font-weight: 500; }
.invite-code { color: var(--primary); font-weight: 700; background: var(--primary-light); padding: 6rpx 16rpx; border-radius: 10rpx; }

.menu-item { display: flex; justify-content: space-between; align-items: center; padding: 24rpx 0; font-size: 30rpx; color: #1E293B; font-weight: 500; }
.menu-arrow { font-size: 36rpx; color: #CBD5E1; }

.btn-logout { margin-top: 52rpx; background: #fff; color: #EF4444; border: 2rpx solid #FEE2E2; border-radius: 28rpx; padding: 26rpx 0; font-size: 30rpx; font-weight: 600; }
.btn-logout:active { background: #FEF2F2; }
.btn-logout::after { border: none; }
