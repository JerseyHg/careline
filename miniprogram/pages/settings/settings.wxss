/* pages/settings/settings.wxss */
.settings-page { padding: 24rpx 24rpx 120rpx; }

.user-card { display: flex; align-items: center; padding: 36rpx 32rpx; }
.user-emoji { font-size: 64rpx; margin-right: 24rpx; }
.user-info { flex: 1; }
.user-name { display: block; font-size: 34rpx; font-weight: 700; color: #333; }
.user-role { display: block; font-size: 24rpx; color: #999; margin-top: 4rpx; }

.cycle-info { padding: 8rpx 0; }
.cycle-text { display: block; font-size: 30rpx; font-weight: 600; color: #333; }
.cycle-start { display: block; font-size: 24rpx; color: #999; margin-top: 4rpx; }

.empty-hint { color: #999; font-size: 26rpx; padding: 12rpx 0; }

.new-cycle-form { padding-top: 12rpx; }
.input-group { margin-bottom: 20rpx; }
.input-label { display: block; font-size: 26rpx; color: #666; margin-bottom: 8rpx; }
.input-field {
  width: 100%; height: 80rpx; padding: 0 20rpx;
  border: 2rpx solid #EAEAEA; border-radius: 12rpx; font-size: 28rpx;
  box-sizing: border-box; line-height: 80rpx;
}
.picker-field { color: #333; }

.info-row {
  display: flex; justify-content: space-between; align-items: center;
  padding: 16rpx 0; border-bottom: 1rpx solid #F5F5F5;
}
.info-row:last-child { border: none; }
.info-label { font-size: 28rpx; color: #666; }
.info-value { font-size: 28rpx; color: #333; }
.invite-code { color: var(--primary); font-weight: 600; }

.menu-item {
  display: flex; justify-content: space-between; align-items: center;
  padding: 20rpx 0; font-size: 30rpx; color: #333;
}
.menu-arrow { font-size: 36rpx; color: #CCC; }

.btn-logout {
  margin-top: 48rpx; background: #fff; color: var(--danger);
  border: 2rpx solid #EAEAEA; border-radius: 28rpx; padding: 24rpx 0;
  font-size: 30rpx;
}
.btn-logout::after { border: none; }
