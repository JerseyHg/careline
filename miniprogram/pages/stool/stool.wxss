/* pages/stool/stool.wxss - 美化版 */
.stool-page {
  padding: 24rpx 24rpx 140rpx;
  background: linear-gradient(180deg, #F8FAFC 0%, #F1F5F9 100%);
  min-height: 100vh;
}

.today-count {
  text-align: center;
  font-size: 24rpx;
  color: #64748B;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
  background: #EEF2FF;
  border-radius: 16rpx;
  font-weight: 600;
  border: 1rpx solid #E0E7FF;
}

.bristol-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.bristol-item {
  width: calc(25% - 14rpx);
  padding: 24rpx 0;
  border-radius: 20rpx;
  border: 2rpx solid #E2E8F0;
  text-align: center;
  background: #FAFBFC;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
}

.bristol-item:active {
  transform: scale(0.95);
}

.bristol-item.active {
  border-color: var(--primary);
  background: var(--primary-light);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.15);
  transform: translateY(-4rpx);
}

.bristol-num {
  display: block;
  font-size: 36rpx;
  font-weight: 800;
  color: #64748B;
  margin-bottom: 4rpx;
}

.bristol-item.active .bristol-num {
  color: var(--primary);
}

.bristol-label {
  display: block;
  font-size: 20rpx;
  color: #94A3B8;
  margin-top: 4rpx;
  font-weight: 500;
}

.bristol-item.active .bristol-label {
  color: var(--primary);
  font-weight: 600;
}
