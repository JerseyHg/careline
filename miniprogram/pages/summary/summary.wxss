/* pages/summary/summary.wxss */
.summary-page { padding: 24rpx 24rpx 120rpx; }

.stats-card { padding: 32rpx; }
.stats-grid { display: flex; flex-wrap: wrap; gap: 16rpx; margin-top: 16rpx; }
.stat-item {
  flex: 1; min-width: 40%; text-align: center; padding: 20rpx;
  background: #F8FAFF; border-radius: 16rpx;
}
.stat-value { display: block; font-size: 36rpx; font-weight: 700; color: var(--primary); }
.stat-label { display: block; font-size: 22rpx; color: #999; margin-top: 4rpx; }
.stat-day { display: block; font-size: 20rpx; color: #BBB; }

.text-card { padding: 32rpx; }
.summary-text {
  display: block; font-size: 28rpx; color: #333; line-height: 1.8;
  white-space: pre-wrap; word-break: break-all;
}

.btn-row { display: flex; flex-direction: column; gap: 16rpx; margin-top: 24rpx; }
.share-btn { margin-top: 0 !important; }
